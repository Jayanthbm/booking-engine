model Hotel {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  address       String
  description   String?
  contactEmail  String?
  contactPhone  String?
  timezone      String?
  checkInTime   DateTime?
  checkOutTime  DateTime?
  currency      String?
  images        String[]
  isActive      Boolean   @default(true)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  rooms         Room[]
  roomTypes     RoomType[]
  hotelAddons   HotelAddon[]
  bookings      Booking[]

  @@index([isActive])
}
