model ActivityAddon {
  id          Int       @id @default(autoincrement())
  hotelId    Int?
  name        String
  description String?
  basePrice   Decimal
  perGuest    Boolean   @default(false)
  maxQuantity Int?
  isActive    Boolean   @default(true)
  images      String[]

  hotel       Hotel?    @relation(fields: [hotelId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([hotelId, name])
}
